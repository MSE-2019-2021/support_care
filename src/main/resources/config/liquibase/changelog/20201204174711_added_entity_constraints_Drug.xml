<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <!--
        Added the constraints for entity Drug.
    -->
    <changeSet id="20201204174711-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="drug_id"
                                 baseTableName="rel_drug__notice"
                                 constraintName="fk_rel_drug__notice__drug_id"
                                 referencedColumnNames="id"
                                 referencedTableName="drug"/>

        <addForeignKeyConstraint baseColumnNames="notice_id"
                                 baseTableName="rel_drug__notice"
                                 constraintName="fk_rel_drug__notice__notice_id"
                                 referencedColumnNames="id"
                                 referencedTableName="notice"/>
        
        <addForeignKeyConstraint baseColumnNames="administration_id"
                                 baseTableName="drug"
                                 constraintName="fk_drug__administration_id"
                                 referencedColumnNames="id"
                                 referencedTableName="administration"/>

    </changeSet>
</databaseChangeLog>
